@model List<Foxdev.Models.Modulo>
@{
    ViewData["Title"] = "Gerenciar Módulos";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Gerenciar Módulos - FoxDev Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-action="Index">
                <i class="fas fa-cog"></i> Admin FoxDev
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> Voltar ao Site
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-link nav-link text-light">
                        <i class="fas fa-sign-out-alt"></i> Sair
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-2">
                <div class="list-group">
                    <a asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a asp-action="Usuarios" class="list-group-item list-group-item-action">
                        <i class="fas fa-users"></i> Usuários
                    </a>
                    <a asp-action="Modulos" class="list-group-item list-group-item-action active">
                        <i class="fas fa-book"></i> Módulos
                    </a>
                    <a asp-action="Licoes" class="list-group-item list-group-item-action">
                        <i class="fas fa-graduation-cap"></i> Lições
                    </a>
                    <a asp-action="Questoes" class="list-group-item list-group-item-action">
                        <i class="fas fa-question-circle"></i> Questões
                    </a>
                </div>
            </div>
            
            <div class="col-md-10">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Gerenciar Módulos</h1>
                    <a asp-action="CriarModulo" class="btn btn-success">
                        <i class="fas fa-plus"></i> Novo Módulo
                    </a>
                </div>
                
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Título</th>
                                        <th>Quantidade de Lições</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var modulo in Model)
                                    {
                                        <tr>
                                            <td>@modulo.Id</td>
                                            <td>@modulo.Titulo</td>
                                            <td>@modulo.Licoes.Count</td>
                                            <td>
                                                <a asp-action="EditarModulo" asp-route-id="@modulo.Id" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i> Editar
                                                </a>
                                                <form asp-action="DeletarModulo" asp-route-id="@modulo.Id" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja deletar este módulo?')">
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i> Deletar
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

