@{
    ViewData["Title"] = "Área Administrativa";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Área Administrativa - FoxDev</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet"/>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-cog"></i> Admin FoxDev
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> Voltar ao Site
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-link nav-link text-light">
                        <i class="fas fa-sign-out-alt"></i> Sair
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-2">
                <div class="list-group">
                    <a asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a asp-action="Usuarios" class="list-group-item list-group-item-action">
                        <i class="fas fa-users"></i> Usuários
                    </a>
                    <a asp-action="Modulos" class="list-group-item list-group-item-action">
                        <i class="fas fa-book"></i> Módulos
                    </a>
                    <a asp-action="Licoes" class="list-group-item list-group-item-action">
                        <i class="fas fa-graduation-cap"></i> Lições
                    </a>
                    <a asp-action="Questoes" class="list-group-item list-group-item-action">
                        <i class="fas fa-question-circle"></i> Questões
                    </a>
                </div>
            </div>
            
            <div class="col-md-10">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <h1>Dashboard Administrativo</h1>
                
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@ViewBag.TotalUsuarios</h4>
                                        <p>Usuários</p>
                                    </div>
                                    <div>
                                        <i class="fas fa-users fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@ViewBag.TotalModulos</h4>
                                        <p>Módulos</p>
                                    </div>
                                    <div>
                                        <i class="fas fa-book fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@ViewBag.TotalLicoes</h4>
                                        <p>Lições</p>
                                    </div>
                                    <div>
                                        <i class="fas fa-graduation-cap fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@ViewBag.TotalQuestoes</h4>
                                        <p>Questões</p>
                                    </div>
                                    <div>
                                        <i class="fas fa-question-circle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5>Ações Rápidas</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <a asp-action="CriarUsuario" class="btn btn-primary btn-block w-100 mb-2">
                                            <i class="fas fa-user-plus"></i> Novo Usuário
                                        </a>
                                    </div>
                                    <div class="col-md-3">
                                        <a asp-action="CriarModulo" class="btn btn-success btn-block w-100 mb-2">
                                            <i class="fas fa-plus"></i> Novo Módulo
                                        </a>
                                    </div>
                                    <div class="col-md-3">
                                        <a asp-action="CriarLicao" class="btn btn-warning btn-block w-100 mb-2">
                                            <i class="fas fa-plus"></i> Nova Lição
                                        </a>
                                    </div>
                                    <div class="col-md-3">
                                        <a asp-action="CriarQuestao" class="btn btn-info btn-block w-100 mb-2">
                                            <i class="fas fa-plus"></i> Nova Questão
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

