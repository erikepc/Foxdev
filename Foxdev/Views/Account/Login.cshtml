@model Foxdev.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login - FoxDev</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet"/>
    
    <style>
        /* Estilos modernos para a página de login */
        .fundo {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
            font-family: 'Roboto', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
        }

        .dark-theme .fundo {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        }

        /* Card modernizado */
        .card-modern {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(20px) !important;
            border: 1px solid rgba(255, 255, 255, 0.2) !important;
            border-radius: 24px !important;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1) !important;
            overflow: hidden !important;
            animation: fadeInUp 0.8s ease-out;
        }

        .dark-theme .card-modern {
            background: rgba(26, 26, 46, 0.95) !important;
            border: 1px solid rgba(255, 255, 255, 0.1) !important;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3) !important;
        }

        /* Header do card */
        .card-header-modern {
            background: linear-gradient(135deg, #F97316, #EA580C) !important;
            border: none !important;
            padding: 2rem !important;
            text-align: center !important;
        }

        .card-header-modern h3 {
            color: white !important;
            font-weight: 700 !important;
            margin: 0 !important;
            font-size: 1.75rem !important;
        }

        /* Body do card */
        .card-body-modern {
            padding: 2.5rem !important;
        }

        /* Inputs modernizados */
        .form-label-modern {
            font-weight: 600 !important;
            color: #4a5568 !important;
            margin-bottom: 0.5rem !important;
        }

        .dark-theme .form-label-modern {
            color: #cbd5e0 !important;
        }

        .form-control-modern {
            background: rgba(255, 255, 255, 0.9) !important;
            border: 2px solid rgba(255, 107, 53, 0.2) !important;
            border-radius: 12px !important;
            padding: 0.875rem 1rem !important;
            font-size: 1rem !important;
            transition: all 0.3s ease !important;
            backdrop-filter: blur(10px) !important;
        }

        .form-control-modern:focus {
            border-color: #F97316 !important;
            box-shadow: 0 0 0 0.2rem rgba(249, 115, 22, 0.25) !important;
            background: rgba(255, 255, 255, 1) !important;
            transform: translateY(-1px) !important;
        }

        .dark-theme .form-control-modern {
            background: rgba(26, 26, 46, 0.9) !important;
            border: 2px solid rgba(255, 255, 255, 0.1) !important;
            color: #cbd5e0 !important;
        }

        .dark-theme .form-control-modern:focus {
            background: rgba(26, 26, 46, 1) !important;
            border-color: #F97316 !important;
        }

        /* Checkbox modernizado */
        .form-check-modern {
            display: flex !important;
            align-items: center !important;
            gap: 0.5rem !important;
            margin: 1.5rem 0 !important;
        }

        .form-check-input-modern {
            width: 1.25rem !important;
            height: 1.25rem !important;
            border: 2px solid #F97316 !important;
            border-radius: 4px !important;
        }

        .form-check-input-modern:checked {
            background-color: #F97316 !important;
            border-color: #F97316 !important;
        }

        .form-check-label-modern {
            font-weight: 500 !important;
            color: #4a5568 !important;
        }

        .dark-theme .form-check-label-modern {
            color: #cbd5e0 !important;
        }

        /* Botão modernizado */
        .btn-modern {
            background: linear-gradient(135deg, #F97316, #EA580C) !important;
            border: none !important;
            color: white !important;
            font-weight: 700 !important;
            padding: 1rem 2rem !important;
            border-radius: 50px !important;
            font-size: 1.125rem !important;
            transition: all 0.3s ease !important;
            position: relative !important;
            overflow: hidden !important;
            box-shadow: 0 8px 25px rgba(249, 115, 22, 0.3) !important;
            width: 100% !important;
        }

        .btn-modern::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #EA580C, #DC2626);
            transition: all 0.3s ease;
            z-index: -1;
        }

        .btn-modern:hover::before {
            left: 0;
        }

        .btn-modern:hover {
            transform: translateY(-2px) !important;
            box-shadow: 0 15px 35px rgba(249, 115, 22, 0.4) !important;
        }

        /* Links modernizados */
        .link-modern {
            color: #F97316 !important;
            text-decoration: none !important;
            font-weight: 600 !important;
            transition: all 0.3s ease !important;
        }

        .link-modern:hover {
            color: #EA580C !important;
            text-decoration: underline !important;
        }

        /* Mensagens de erro */
        .text-danger {
            color: #ef4444 !important;
            font-size: 0.875rem !important;
            font-weight: 500 !important;
        }

        /* Animações */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Logo/Ícone */
        .login-icon {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.5rem;
            color: white;
        }

        /* Responsividade */
        @@media (max-width: 768px) {
            .card-modern {
                margin: 1rem !important;
            }
            
            .card-header-modern {
                padding: 1.5rem !important;
            }
            
            .card-body-modern {
                padding: 1.5rem !important;
            }
            
            .card-header-modern h3 {
                font-size: 1.5rem !important;
            }
        }
    </style>
</head>
<body class="fundo">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card card-modern">
                    <div class="card-header card-header-modern">
                        <div class="login-icon">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <h3>Entrar no FoxDev</h3>
                    </div>
                    <div class="card-body card-body-modern">
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label form-label-modern">
                                    <i class="fas fa-envelope me-2"></i>Email
                                </label>
                                <input asp-for="Email" class="form-control form-control-modern" placeholder="Digite seu email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label form-label-modern">
                                    <i class="fas fa-lock me-2"></i>Senha
                                </label>
                                <input asp-for="Password" class="form-control form-control-modern" placeholder="Digite sua senha" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                            <div class="form-check form-check-modern">
                                <input asp-for="RememberMe" class="form-check-input form-check-input-modern" />
                                <label asp-for="RememberMe" class="form-check-label form-check-label-modern">Lembrar de mim</label>
                            </div>
                            
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-modern">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Entrar
                                </button>
                            </div>
                        </form>
                        
                        <div class="text-center">
                            <p class="mb-2">Não tem uma conta? <a asp-action="Register" class="link-modern">Registre-se aqui</a></p>
                            <p class="mb-0"><a asp-controller="Home" asp-action="Index" class="link-modern">
                                <i class="fas fa-arrow-left me-1"></i>Voltar ao início
                            </a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

