@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>FoxDev</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
   
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet"/>

  </head>
  <body class="fundo">
    <header class="d-flex justify-content-between align-items-center p-4">
      @if (TempData["Success"] != null)
      {
          <div class="alert alert-success alert-dismissible fade show" role="alert">
              @TempData["Success"]
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
      }
      
      @if (TempData["Error"] != null)
      {
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
              @TempData["Error"]
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
      }
      
      @if (TempData["Info"] != null)
      {
          <div class="alert alert-info alert-dismissible fade show" role="alert">
              @TempData["Info"]
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
      }
    </header>
    <main class="d-flex flex-column align-items-center mt-5">
      <div class="d-flex align-items-center">
        <img src="~/img/BannerInicio.png" alt="Duolingo characters" width="400" height="400" class="img-fluid"/>
        <div class="ms-4 text-center">
          <h1 class="frase-inicial fw-bold fs-2 mb-5">
            O jeito grátis de praticar programação!
          </h1>
          <div class="mt-3">
            <a asp-controller="Account" asp-action="Register" class="btn rounded-pill" style="background-color: #F97316; border: 0px solid #ffffff; color: #ffffff; font-size: 1.125rem; font-weight: bold; padding: 0.5rem 1.5rem; text-decoration: none;">
              COMECE AGORA
            </a>
          </div>
          <div class="mt-3">
            <a asp-controller="Account" asp-action="Login" class="btn rounded-pill" style="background-color: #ffffff; border: 0px solid #F97316; color: #F97316; font-size: 1.125rem; font-weight: bold; padding: 0.5rem 1.5rem; text-decoration: none;">
              JÁ TENHO UMA CONTA
            </a>
          </div>
          <div class="mt-3">
            <a asp-area=""
              asp-controller="Home"
              asp-action="Nickname"
              class="btn rounded-pill"
              style="background-color: #F97316; border: 0px solid #ffffff; color: #ffffff; font-size: 1.125rem; font-weight: bold; padding: 0.5rem 1.5rem; text-decoration: none;">
              ENTRAR COMO CONVIDADO
            </a>
          </div>

        </div>
      </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

