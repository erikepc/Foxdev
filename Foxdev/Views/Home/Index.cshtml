@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>FoxDev</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <!-- Google Fonts: Roboto -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet"/>

  </head>
  <body class="fundo font-roboto">
    <header class="d-flex justify-content-between align-items-center p-4">
      <!-- Conteúdo do cabeçalho (se necessário) -->
    </header>
    <main class="d-flex flex-column align-items-center mt-5">
      <div class="d-flex align-items-center">
        <img src="~/img/logo.png" alt="Duolingo characters" width="400" height="400" class="img-fluid"/>
        <div class="ms-4 text-center">
          <h1 class="fw-bold text-secondary fs-2">
            O jeito grátis de praticar programação!
          </h1>
          <div class="mt-3">
            <button class="btn rounded-pill" style="background-color: #F97316; color: #ffffff; font-size: 1.125rem; font-weight: bold; padding: 0.5rem 1.5rem;">
              COMECE AGORA
            </button>
          </div>
          <div class="mt-2">
            <button class="btn rounded-pill" style="background-color: #ffffff; border: 2px solid #ffffff; color: #F97316; font-size: 1.125rem; font-weight: bold; padding: 0.5rem 1.5rem;">
              JÁ TENHO UMA CONTA
            </button>
          </div>
        </div>
      </div>
    </main>
    <!-- Bootstrap Bundle com Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
