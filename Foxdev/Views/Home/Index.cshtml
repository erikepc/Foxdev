@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>FoxDev</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
   
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet"/>

    <style>
      /* Estilos modernos para a página inicial */
      .fundo {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        min-height: 100vh;
        font-family: 'Roboto', sans-serif;
      }

      .dark-theme .fundo {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
      }

      /* Container principal moderno */
      .hero-container {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 3rem;
        margin: 2rem auto;
        max-width: 1200px;
        transition: all 0.3s ease;
      }

      .dark-theme .hero-container {
        background: rgba(26, 26, 46, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      }

      /* Imagem com efeitos modernos */
      .hero-image {
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        animation: float 6s ease-in-out infinite;
      }

      .hero-image:hover {
        transform: scale(1.02);
        box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15);
      }

      /* Animação flutuante */
      @@keyframes float {
        0%, 100% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-10px);
        }
      }

      /* Título moderno */
      .frase-inicial {
        background: linear-gradient(135deg, #2d3748, #4a5568);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-size: 3rem !important;
        font-weight: 800 !important;
        line-height: 1.2;
        margin-bottom: 2rem !important;
        animation: slideInFromRight 1s ease-out;
      }

      .dark-theme .frase-inicial {
        background: linear-gradient(135deg, #e2e8f0, #cbd5e0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      @@keyframes slideInFromRight {
        from {
          opacity: 0;
          transform: translateX(50px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      /* Botões modernos */
      .btn-modern {
        background: linear-gradient(135deg, #F97316, #EA580C) !important;
        border: none !important;
        color: white !important;
        font-size: 1.125rem !important;
        font-weight: 700 !important;
        padding: 1rem 2rem !important;
        border-radius: 50px !important;
        text-decoration: none !important;
        transition: all 0.3s ease !important;
        position: relative !important;
        overflow: hidden !important;
        box-shadow: 0 8px 25px rgba(249, 115, 22, 0.3) !important;
        margin: 0.75rem 0 !important;
        display: inline-block !important;
        min-width: 250px !important;
        text-align: center !important;
      }

      .btn-modern::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #EA580C, #DC2626);
        transition: all 0.3s ease;
        z-index: -1;
      }

      .btn-modern:hover::before {
        left: 0;
      }

      .btn-modern:hover {
        transform: translateY(-3px) !important;
        box-shadow: 0 15px 35px rgba(249, 115, 22, 0.4) !important;
        color: white !important;
      }

      /* Botão secundário */
      .btn-secondary-modern {
        background: rgba(255, 255, 255, 0.9) !important;
        border: 2px solid #F97316 !important;
        color: #F97316 !important;
        font-size: 1.125rem !important;
        font-weight: 700 !important;
        padding: 1rem 2rem !important;
        border-radius: 50px !important;
        text-decoration: none !important;
        transition: all 0.3s ease !important;
        position: relative !important;
        overflow: hidden !important;
        box-shadow: 0 8px 25px rgba(249, 115, 22, 0.1) !important;
        margin: 0.75rem 0 !important;
        display: inline-block !important;
        min-width: 250px !important;
        text-align: center !important;
        backdrop-filter: blur(10px) !important;
      }

      .btn-secondary-modern::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #F97316, #EA580C);
        transition: all 0.3s ease;
        z-index: -1;
      }

      .btn-secondary-modern:hover::before {
        left: 0;
      }

      .btn-secondary-modern:hover {
        transform: translateY(-3px) !important;
        box-shadow: 0 15px 35px rgba(249, 115, 22, 0.3) !important;
        color: white !important;
        border-color: transparent !important;
      }

      .dark-theme .btn-secondary-modern {
        background: rgba(26, 26, 46, 0.9) !important;
        color: #F97316 !important;
      }

      /* Container de botões */
      .buttons-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
        margin-top: 2rem;
      }

      /* Alertas modernos */
      .alert-modern {
        border-radius: 16px !important;
        border: none !important;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1) !important;
        backdrop-filter: blur(10px) !important;
        animation: slideInFromTop 0.5s ease-out;
      }

      @@keyframes slideInFromTop {
        from {
          opacity: 0;
          transform: translateY(-20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .alert-success.alert-modern {
        background: rgba(34, 197, 94, 0.1) !important;
        color: #166534 !important;
        border-left: 4px solid #22c55e !important;
      }

      .alert-danger.alert-modern {
        background: rgba(239, 68, 68, 0.1) !important;
        color: #991b1b !important;
        border-left: 4px solid #ef4444 !important;
      }

      .alert-info.alert-modern {
        background: rgba(59, 130, 246, 0.1) !important;
        color: #1e40af !important;
        border-left: 4px solid #3b82f6 !important;
      }

      /* Responsividade */
      @@media (max-width: 768px) {
        .hero-container {
          padding: 2rem 1.5rem;
          margin: 1rem;
        }

        .frase-inicial {
          font-size: 2rem !important;
        }

        .hero-content {
          flex-direction: column !important;
          text-align: center !important;
        }

        .hero-image {
          width: 100% !important;
          max-width: 300px !important;
          height: auto !important;
          margin-bottom: 2rem;
        }

        .btn-modern,
        .btn-secondary-modern {
          min-width: 200px !important;
          font-size: 1rem !important;
          padding: 0.875rem 1.5rem !important;
        }
      }

      /* Efeitos de entrada */
      .hero-container {
        animation: fadeInUp 0.8s ease-out;
      }

      @@keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Botões com delay de animação */
      .btn-modern:nth-child(1) {
        animation: slideInFromBottom 0.8s ease-out 0.3s both;
      }

      .btn-secondary-modern {
        animation: slideInFromBottom 0.8s ease-out 0.5s both;
      }

      .btn-modern:nth-child(3) {
        animation: slideInFromBottom 0.8s ease-out 0.7s both;
      }

      @@keyframes slideInFromBottom {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>

  </head>
  <body class="fundo">
    <header class="d-flex justify-content-between align-items-center p-4">
      @if (TempData["Success"] != null)
      {
          <div class="alert alert-success alert-dismissible fade show alert-modern" role="alert">
              <i class="fas fa-check-circle me-2"></i>
              @TempData["Success"]
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
      }
      
      @if (TempData["Error"] != null)
      {
          <div class="alert alert-danger alert-dismissible fade show alert-modern" role="alert">
              <i class="fas fa-exclamation-circle me-2"></i>
              @TempData["Error"]
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
      }
      
      @if (TempData["Info"] != null)
      {
          <div class="alert alert-info alert-dismissible fade show alert-modern" role="alert">
              <i class="fas fa-info-circle me-2"></i>
              @TempData["Info"]
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
      }
    </header>
    
    <main class="d-flex flex-column align-items-center mt-5">
      <div class="hero-container">
        <div class="d-flex align-items-center hero-content">
          <img src="~/img/BannerInicio.png" alt="Duolingo characters" width="400" height="400" class="img-fluid hero-image"/>
          <div class="ms-4 text-center">
            <h1 class="frase-inicial fw-bold fs-2 mb-5">
              O jeito grátis de praticar programação!
            </h1>
            <div class="buttons-container">
              <a asp-controller="Account" asp-action="Register" class="btn btn-modern">
                <i class="fas fa-rocket me-2"></i>
                COMECE AGORA
              </a>
              
              <a asp-controller="Account" asp-action="Login" class="btn btn-secondary-modern">
                <i class="fas fa-user me-2"></i>
                JÁ TENHO UMA CONTA
              </a>
              
              <a asp-area=""
                asp-controller="Home"
                asp-action="Nickname"
                class="btn btn-modern">
                <i class="fas fa-eye me-2"></i>
                ENTRAR COMO CONVIDADO
              </a>
            </div>
          </div>
        </div>
      </div>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

