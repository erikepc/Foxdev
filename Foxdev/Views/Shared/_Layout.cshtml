<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Foxdev</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/transitions.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dark-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Foxdev.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    
    <!-- Estilos modernos para a navbar -->
    <style>
        /* Navbar moderna */
        .navbar-modern {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 107, 53, 0.1) !important;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08) !important;
            padding: 1rem 0 !important;
            transition: all 0.3s ease;
        }

        /* Brand modernizado */
        .navbar-brand-modern {
            display: flex !important;
            align-items: center !important;
            gap: 0.75rem !important;
            font-weight: 700 !important;
            font-size: 1.5rem !important;
            color: #FF6B35 !important;
            text-decoration: none !important;
            transition: all 0.3s ease !important;
            padding: 0.5rem 0 !important;
        }

        .navbar-brand-modern:hover {
            transform: translateY(-2px) !important;
            color: #E55A2B !important;
            text-decoration: none !important;
        }

        .navbar-brand-modern img {
            transition: all 0.3s ease !important;
            border-radius: 12px !important;
            box-shadow: 0 4px 15px rgba(255, 107, 53, 0.2) !important;
        }

        .navbar-brand-modern:hover img {
            transform: scale(1.05) !important;
            box-shadow: 0 8px 25px rgba(255, 107, 53, 0.3) !important;
        }

        /* Navigation links modernos */
        .navbar-nav-modern .nav-link {
            font-weight: 500 !important;
            padding: 0.75rem 1.25rem !important;
            border-radius: 12px !important;
            transition: all 0.3s ease !important;
            position: relative !important;
            overflow: hidden !important;
            margin: 0 0.25rem !important;
            color: #4a5568 !important;
            text-decoration: none !important;
        }

        .navbar-nav-modern .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #FF6B35, #E55A2B);
            transition: all 0.3s ease;
            z-index: -1;
            border-radius: 12px;
        }

        .navbar-nav-modern .nav-link:hover::before {
            left: 0;
        }

        .navbar-nav-modern .nav-link:hover {
            color: white !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 8px 25px rgba(255, 107, 53, 0.3) !important;
            text-decoration: none !important;
        }

        /* Theme toggle button modernizado */
        .theme-toggle-btn-modern {
            background: linear-gradient(135deg, #FF6B35, #E55A2B) !important;
            border: none !important;
            color: white !important;
            width: 45px !important;
            height: 45px !important;
            border-radius: 50% !important;
            cursor: pointer !important;
            transition: all 0.3s ease !important;
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            font-size: 1rem !important;
            box-shadow: 0 4px 15px rgba(255, 107, 53, 0.3) !important;
            padding: 0 !important;
            margin: 0 0.25rem !important;
        }

        .theme-toggle-btn-modern:hover {
            transform: translateY(-2px) rotate(180deg) !important;
            box-shadow: 0 8px 25px rgba(255, 107, 53, 0.4) !important;
            background: linear-gradient(135deg, #E55A2B, #FF6B35) !important;
        }

        /* Mobile toggler modernizado */
        .navbar-toggler-modern {
            border: 2px solid #FF6B35 !important;
            border-radius: 8px !important;
            padding: 0.5rem !important;
            transition: all 0.3s ease !important;
        }

        .navbar-toggler-modern:hover {
            background: rgba(255, 107, 53, 0.1) !important;
            transform: scale(1.05) !important;
        }

        .navbar-toggler-modern .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='%23FF6B35' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e") !important;
        }

        /* Animações */
        @@keyframes slideInFromTop {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .navbar-nav-modern .nav-item {
            animation: slideInFromTop 0.6s ease forwards;
        }

        .navbar-nav-modern .nav-item:nth-child(1) { animation-delay: 0.1s; }
        .navbar-nav-modern .nav-item:nth-child(2) { animation-delay: 0.2s; }
        .navbar-nav-modern .nav-item:nth-child(3) { animation-delay: 0.3s; }
        .navbar-nav-modern .nav-item:nth-child(4) { animation-delay: 0.4s; }

        /* Tema escuro */
        .dark-theme .navbar-modern {
            background: rgba(26, 26, 46, 0.95) !important;
            border-bottom: 1px solid rgba(255, 107, 53, 0.2) !important;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3) !important;
        }

        .dark-theme .navbar-nav-modern .nav-link {
            color: #cbd5e0 !important;
        }

        .dark-theme .navbar-nav-modern .nav-link:hover {
            color: white !important;
        }

        .dark-theme .theme-toggle-btn-modern {
            background: linear-gradient(135deg, #ffd700, #ffed4e) !important;
            color: #1a1a2e !important;
            box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3) !important;
        }

        .dark-theme .theme-toggle-btn-modern:hover {
            box-shadow: 0 8px 25px rgba(255, 215, 0, 0.4) !important;
        }

        /* Responsividade */
        @@media (max-width: 768px) {
            .navbar-nav-modern .nav-link {
                padding: 0.5rem 0.75rem !important;
                font-size: 0.9rem !important;
                margin: 0.25rem 0 !important;
            }
            
            .theme-toggle-btn-modern {
                width: 40px !important;
                height: 40px !important;
            }

            .navbar-brand-modern {
                font-size: 1.3rem !important;
            }

            .navbar-brand-modern img {
                width: 60px !important;
                height: 60px !important;
            }
        }
    </style>
</head>

<body class="fundo">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 navbar-modern">
            <div class="container-fluid">
                <a class="navbar-brand navbar-brand-modern" asp-area="" asp-controller="Home" asp-action="Index">
                    <img alt="Duolingo logo" class="h-18" height="80" src="~/img/logo.png" width="80" />
                    <span class="text-orange-500 text-2xl font-bold ml-2">
                        FoxDev
                    </span>
                </a>
                <button class="navbar-toggler navbar-toggler-modern" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto pe-5 navbar-nav-modern">
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ModulosLogado">Home</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Convidado">Home</a>
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Ranking">Ranking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <button id="themeToggleBtn" class="theme-toggle-btn nav-link theme-toggle-btn-modern">
                                <i class="fas fa-moon"></i>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-black ">
        <div class="container ">
            &copy; 2025 - Foxdev - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="text-decoration: none; color: inherit;">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/transition.js" asp-append-version="true"></script>
    <script src="~/js/theme-toggle.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

